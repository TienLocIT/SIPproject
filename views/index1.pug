doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Document
    body
        p#test
        script.
            function changetoHTML(data){
                var descriptionJob=data
                descriptionJob = descriptionJob.replace(/&gt;/g, '>')
                descriptionJob = descriptionJob.replace(/&lt;/g, '<');
                descriptionJob = descriptionJob.replace(/&quot;/g, '"');
                descriptionJob = descriptionJob.replace(/&apos;/g, "'");
                descriptionJob = descriptionJob.replace(/&amp;/g, '&');
                return descriptionJob
            }
            document.getElementById("test").innerHTML = changetoHTML("#{job.JobDescription}")

            